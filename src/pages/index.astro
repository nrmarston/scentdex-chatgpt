---
import SearchIsland from "../ui/SearchIsland.jsx";
import type { Brand } from "../types.ts";
// Do not fetch brands on the server; the island will fetch them client-side.
const brands: Brand[] = [];
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Scentdex</title>
    <link rel="preload" href="/data/brands.json" as="fetch" crossorigin>
  </head>
  <body>
    <main class="container">
      <h1>Scentdex</h1>
      <SearchIsland client:idle brands={brands} />
    </main>
  </body>
</html>